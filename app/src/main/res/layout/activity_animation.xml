<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.topic.elmira.androidtopics.animation.AnimationActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Alexey and Elmira!"
        android:background="@drawable/text_view_rect"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/animateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animate"
        android:onClick="startAnimation"
        android:stateListAnimator="@xml/animate_scale"
        android:layout_gravity="center"/>

</LinearLayout>
