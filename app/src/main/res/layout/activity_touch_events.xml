<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.topic.elmira.androidtopics.touchevents.TouchEventsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="clearTouchView"
        />

    <com.topic.elmira.androidtopics.touchevents.ShapeSelectorView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="24dp"
        app:showShapeName="true"
        app:shapeColor="@color/colorPrimaryDark"
        app:textColor="@color/colorAccent"/>

    <com.topic.elmira.androidtopics.touchevents.TouchLineView
        android:id="@+id/touchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
