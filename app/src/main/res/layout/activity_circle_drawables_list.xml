<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.topic.elmira.androidtopics.circledrawableslist.CircleDrawablesListActivity">

    <com.topic.elmira.androidtopics.circledrawableslist.CircleDrawableListView
        android:id="@+id/circle_drawable_list"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:maxCount="3"
        app:circlePadding="1dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/image2"
        android:background="@drawable/shape_oval_solid_color"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="start"
        android:text="@string/long_text"
        android:background="@drawable/shape_oval_solid_color"/>

